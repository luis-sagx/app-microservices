# Etapa 1: Build
FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build -- --configuration production

# Etapa 2: Nginx
FROM nginx:alpine
COPY --from=builder /app/dist/app-products-and-categories/browser /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
